<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wang.whj.dao.TDictDao">

    <resultMap type="com.wang.whj.entity.TDict" id="TDictMap">
        <result property="dictId" column="dict_id" jdbcType="INTEGER"/>
        <result property="type" column="type" jdbcType="VARCHAR"/>
        <result property="code" column="code" jdbcType="VARCHAR"/>
        <result property="value" column="value" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="TDictMap">
        select
          dict_id, type, code, value
        from sharding_jdbc_2.t_dict
        where dict_id = #{dictId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="TDictMap">
        select
          dict_id, type, code, value
        from sharding_jdbc_2.t_dict
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="TDictMap">
        select
          dict_id, type, code, value
        from sharding_jdbc_2.t_dict
        <where>
            <if test="dictId != null">
                and dict_id = #{dictId}
            </if>
            <if test="type != null and type != ''">
                and type = #{type}
            </if>
            <if test="code != null and code != ''">
                and code = #{code}
            </if>
            <if test="value != null and value != ''">
                and value = #{value}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="dictId" useGeneratedKeys="true">
        insert into sharding_jdbc_2.t_dict(type, code, value)
        values (#{type}, #{code}, #{value})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update sharding_jdbc_2.t_dict
        <set>
            <if test="type != null and type != ''">
                type = #{type},
            </if>
            <if test="code != null and code != ''">
                code = #{code},
            </if>
            <if test="value != null and value != ''">
                value = #{value},
            </if>
        </set>
        where dict_id = #{dictId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from sharding_jdbc_2.t_dict where dict_id = #{dictId}
    </delete>

</mapper>