<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wang.whj.dao.TOrder2Dao">

    <resultMap type="com.wang.whj.entity.TOrder2" id="TOrder2Map">
        <result property="orderId" column="order_id" jdbcType="INTEGER"/>
        <result property="price" column="price" jdbcType="NUMERIC"/>
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="status" column="status" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="TOrder2Map">
        select
          order_id, price, user_id, status
        from sharding_jdbc_2.t_order_2
        where order_id = #{orderId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="TOrder2Map">
        select
          order_id, price, user_id, status
        from sharding_jdbc_2.t_order_2
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="TOrder2Map">
        select
          order_id, price, user_id, status
        from sharding_jdbc_2.t_order_2
        <where>
            <if test="orderId != null">
                and order_id = #{orderId}
            </if>
            <if test="price != null">
                and price = #{price}
            </if>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="status != null and status != ''">
                and status = #{status}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="orderId" useGeneratedKeys="true">
        insert into sharding_jdbc_2.t_order_2(price, user_id, status)
        values (#{price}, #{userId}, #{status})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update sharding_jdbc_2.t_order_2
        <set>
            <if test="price != null">
                price = #{price},
            </if>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="status != null and status != ''">
                status = #{status},
            </if>
        </set>
        where order_id = #{orderId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from sharding_jdbc_2.t_order_2 where order_id = #{orderId}
    </delete>

</mapper>